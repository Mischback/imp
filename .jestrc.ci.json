{
  "preset": "ts-jest",
  "testEnvironment": "node",

  "bail": 0,

  "clearMocks": true,

  "collectCoverage": true,
  "collectCoverageFrom": ["<rootDir>/**/*.ts", "!<rootDir>/**/index.ts"],
  "coverageReporters": ["text", "lcov"],
  "coverageDirectory": ".coverage",

  "injectGlobals": false,

  "rootDir": "src"
}
